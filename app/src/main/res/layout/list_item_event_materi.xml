<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10sp"
    android:paddingLeft="5sp"
    android:paddingRight="5sp"
    android:paddingTop="5sp"
    android:background="?android:attr/selectableItemBackground"
    tools:context="com.duaruang.pnmportal.activity.EventMateriActivity">


    <LinearLayout
        android:id="@+id/materi_layout_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="5sp"
        android:paddingEnd="5sp"
        android:layout_toStartOf="@+id/img_download"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/rundown_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="5sp"
                android:src="@drawable/iconfeedback" />

            <TextView
                android:id="@+id/materi_namafile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10sp"
                android:layout_toEndOf="@+id/rundown_icon"
                android:text="Name "
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="#117fd4"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/materi_tipefile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/rundown_icon"
                android:text="Tipe File" />


            <!--<View-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="0dp"-->
            <!--android:layout_weight="1" />-->


            <!--<View-->
            <!--android:layout_width="fill_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:layout_marginBottom="10dp"-->
            <!--android:layout_below="@id/news_layout_content"-->
            <!--android:background="#d3d3d3"/>-->
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/img_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_centerVertical="true"
        app:ico_color="#737373"
        app:ico_icon="faw-download"
        app:ico_size="30dp">
    </ImageView>


</RelativeLayout>